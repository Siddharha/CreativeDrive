<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="in.creativelizard.creativedrive.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/ic_google_drive"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Google Drive Folder Create/Delete"
        android:textColor="#000000"
        android:textSize="20dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Connect to Drive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:onClick="clkConnect"
            android:layout_below="@+id/txtStatus"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_shape"
            android:layout_margin="5dp"
            android:textSize="20sp" />

        <Button
            android:text="Create Folder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button2"
            android:layout_centerHorizontal="true"
            android:id="@+id/button3"
            android:onClick="clkOpen"
            android:background="@drawable/rounded_shape"
            android:layout_margin="5dp"
            android:textSize="20sp" />

        <Button
            android:text="Delete Folder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:onClick="clkDelete"
            android:background="@drawable/rounded_shape"
            android:layout_margin="5dp"
            android:textSize="20sp" />

        <Button
            android:text="Disconnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:onClick="clkDisconnect"
            android:layout_below="@+id/button5"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_shape"
            android:layout_margin="5dp"
            android:textSize="20sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:id="@+id/txtStatus"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_margin="5dp" />

    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By Siddhartha Maji"/>


</LinearLayout>
